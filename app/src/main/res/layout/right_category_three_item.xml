<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/image_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/product_iv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_iv1"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/rightMarginIv1"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/title1"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/product_iv2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_iv2"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/rightMarginIv2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/title2"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/product_iv3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_iv3"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/rightMarginIv3"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@+id/title3"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_title1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:gravity="center"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/text_line1"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#D5D5D5"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#c8c8c8"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_rl2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_title2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:gravity="center"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/text_line2"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#D5D5D5"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#c8c8c8"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_rl3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:visibility="gone" >

        <TextView
            android:id="@+id/text_title3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:gravity="center"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/text_line3"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#D5D5D5"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#c8c8c8"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</LinearLayout>