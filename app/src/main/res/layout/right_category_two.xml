<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/two_category"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="41dp" >

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/categoryTwoTitle"
            android:background="#4A275F" />

        <TextView
            android:id="@+id/categoryTwoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="水电费就流口水的减肥"
            android:textColor="#323232"
            android:textSize="@dimen/text_small" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/categoryTwoTitle"
            android:background="#4A275F" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/gridview_category_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>


</LinearLayout>