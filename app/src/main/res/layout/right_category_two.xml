<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/two_category"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/categoryTag"
            android:layout_width="1.5dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:background="#4A275F" />

        <TextView
            android:id="@+id/categoryTwoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@+id/categoryTag"
            android:textColor="#4c265f"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:id="@+id/categoryTwoBottomLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#c8c8c8"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <View
        android:id="@+id/imageDividerHeight"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone" />

    <!--
         <GridView
        android:id="@+id/gridview_category_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:scrollbars="none" />
    -->

    <LinearLayout
        android:id="@+id/gridview_category_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/bottomMargin"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone" />

</LinearLayout>